<div class="card">
  <div class="card-header  flex-row justify-space-between">
    <h2>
      <a href="/post/{{post.id}}">
        <div class="col-8">{{post.title}}</div>
      </a>
    </h2>
    <div class="col-3">posted by {{post.user.username}} on {{format_date post.creating_date}}
    </div>
  </div>  
  <p class="card-body">
   {{post.content}}
  </p>
</div>
<input type="hidden" name="post-id" value="{{post.id}}"/>
<div class="card">
  <div class="card-header"> Comments </div>

{{#if comments.length}}
        {{#each comments as |comment|}}
    <div class="card-footer">
       <p>From  :    {{comment.user.username}} </p>
      <p> Comment : {{comment.commentContent}} </p> 
     <p> Created on  : {{comment.dateCreated}}</p> 

  
      {{/each}}
    
     </div>

     {{/if}}
  <form class="card-body" id="new-comment-form">
 
    
    <p class="form-label">Comment Here</p>
    <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
    <button type="submit" class="btn btn-primary">confirm</button>
  </form> 



</div>
 </div>

<script src="/js/comment.js"></script>

